<%= error_messages_for(@user_session) %>

<%= form_for @user_session do |f| %>
	<div id="login_form_container">
		<div id="login_form">
			<h1>Login</h1>
		  <%= f.label :email %><br />
		  <%= f.email_field :email %><br />
		  <br />
		  <%= f.label :password %><br />
		  <%= f.password_field :password %><br />
		  <br />
		  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
		  <br />
		  <%= f.submit "Login" %>
	  </div>
  </div>
<% end %>
